<% companyInfo = data.pages[company] %>
<% if companyInfo %>
<!--To Create New ad Copy from here-->
    <div class="col-lg-4 col-md-4 col-sm-4" style="display: block;">
        <div class="panel" style="display: block;" >

                <div align=center class="buttons" style="display: block;">
                    <a class="btn btn-lg btn-default job-button" style = "background-image: url('img/<%= company %>.jpg');" data-toggle="modal" data-target="#Modal<%= company %>" ><!--Background Image and Modal Id-->
                    <div >
                        <h4 class = "btn-text" style="position:relative; top: 190px;"><!--Short Description-->
                            <%= companyInfo.name %>
                        </h4>
                    </div>
                    </a>

                    <br>
                </div>
        </div>

        <div class="modal fade" id="Modal<%= company %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"><!--Change Modal ID-->
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h2 class="modal-title" id="myModalLabel"><%= companyInfo.title || companyInfo.name %></h2><!--Popup Header-->
                    </div>
                    <div class="modal-body">
                        <h3>Description</h3><!--Description-->
                            <p><%= companyInfo.job_desc %></p>
                        <h3>Requirements</h3><!--Requirements-->
                        <ul>
                            <% companyInfo.requirements.each do |r| %>
                            <li><%= r %></li>
                            <% end %>
                        </ul>
                        <h3>How to Apply</h3><!--Apply-->
                            <p><%= companyInfo.howtoapply %></p>
                            <% if companyInfo.contact %>
                        <h3>Contact</h3><!--Contact-->
                                <p>
                                <% if companyInfo.contact.company %>
                                <%= companyInfo.contact.company %><br>
                                <% end %>
                                <% if companyInfo.contact.name %>
                                <%= companyInfo.contact.name %><br>
                                <% end %>
                                <% if companyInfo.contact.position %>
                                <%= companyInfo.contact.position %><br>
                                <% end %>
                                <% if companyInfo.contact.phone %>
                                Phone: <%= companyInfo.contact.phone %><br>
                                <% end %>
                                <% if companyInfo.contact.address %>
                                Address: <%= companyInfo.contact.address %><br>
                                <% end %>
                                <% if companyInfo.contact.website %>
                                Website: <a href="<%= companyInfo.contact.website.url %> " target="_blank"><%= companyInfo.contact.website.display_name || companyInfo.contact.website.url %></a><br>
                                <% end %>
                                <% if companyInfo.contact.other %>
                                <%= companyInfo.contact.other %>
                                <% end %>

                            </p>
                            <% end %>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default btn-close-modal" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!--To Here-->
<% end %>